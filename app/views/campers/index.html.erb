<h1>Listing campers</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Year</th>
      <th>Vin</th>
      <th>Mileage</th>
      <th>Customer</th>
      <th>Make</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campers.each do |camper| %>
      <tr>
        <td><%= camper.model %></td>
        <td><%= camper.year %></td>
        <td><%= camper.vin %></td>
        <td><%= camper.mileage %></td>
        <td><%= camper.customer_id %></td>
        <td><%= camper.make_id %></td>
        <td><%= link_to 'Show', camper %></td>
        <td><%= link_to 'Edit', edit_camper_path(camper) %></td>
        <td><%= link_to 'Destroy', camper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

